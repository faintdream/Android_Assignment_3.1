<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.akashdubey.vibgyor.MainActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvRed"
        android:layout_width="match_parent"
        android:background="@color/red"
        android:text="@string/red"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_height="66sp" />
</LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvOrange"
        android:layout_width="match_parent"
        android:background="@color/orange"
        android:text="@string/orange"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_height="66sp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvYellow"
            android:layout_width="match_parent"
            android:background="@color/yellow"
            android:text="@string/yellow"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="66sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvGreen"
            android:layout_width="match_parent"
            android:background="@color/green"
            android:text="@string/green"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="66sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvBlue"
            android:layout_width="match_parent"
            android:background="@color/blue"
            android:text="@string/blue"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="66sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvIndigo"
            android:layout_width="match_parent"
            android:background="@color/indigo"
            android:text="@string/indigo"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="66sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvViolet"
            android:layout_width="match_parent"
            android:background="@color/violet"
            android:text="@string/violet"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_height="66sp" />
    </LinearLayout>

</LinearLayout>




